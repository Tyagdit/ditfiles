{
    "languageserver": {
        "efm": {
            "command": "efm-langserver",
            "args": [],
            // custom config path
            // "args": ["-c", "/path/to/your/config.yaml"],
            "filetypes": ["python"],
            "settings": {
                "languages": {
                    "python": [
                        {
                            "lintCommand": "flake8 --stdin-display-name ${INPUT} -",
                            "lintStdin": true,
                            "lintFormats": [ "%f:%l:%c: %m" ]
                        },
                        {
                            "lintCommand": "mypy --show-column-numbers",
                            "lintFormats": [
                                "%f:%l:%c: %trror: %m",
                                "%f:%l:%c: %tarning: %m",
                                "%f:%l:%c: %tote: %m"
                            ]
                        }
                    ]
                }
            }
        }
    }
}
